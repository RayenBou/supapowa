{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1 class="text-2xl font-semibold mb-4">Product index</h1>

	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
		{% for product in products %}
			<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
				<a href="#">
					{% if product.photo|length > 0 %}
						{% set firstImage = product.photo|first %}
						<img src="{{ asset('photo/product/' ~ firstImage.reference) }}" alt="{{ product.name }}" class=""/>

					{% endif %}

				</a>

				<div class="px-5 pb-5">
					<a href="#">
						<h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ product.name }}</h5>
					</a>
					<div
						class="flex items-center mt-2.5 mb-5">
						{# Rating stars SVGs here #}
						<span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3">5.0</span>
					</div>
					<div class="flex items-center justify-between">
						<span class="text-3xl font-bold text-gray-900 dark:text-white">â‚¬{{ product.price }}</span>
						<a href="{{path('app_product_show',{'id': product.id})}}" class="text-white bg-amber-300 hover:bg-amber-500 focus:ring-4 focus:outline-none focus:ring-amber-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-amber-300 dark:hover:bg-amber-600 dark:focus:ring-amber-500">Voir</a>
						<a href='{{path('app_cart_add',{'id':product.id})}}' class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% else %}
			<p class="text-gray-500">Aucun produit</p>
		{% endfor %}
	</div>


	<a href="{{ path('app_product_new') }}" class="mt-4 block text-blue-700 hover:underline">Create new</a>
{% endblock %}
